---
export interface Props {
  title: string;
}

const { title } = Astro.props;

const webpage = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "WebPage",
      "@id": "https://www.brito.top/",
      url: "https://www.brito.top/",
      name: "Brito.top | UI, UX and Web projects development",
      isPartOf: { "@id": "https://www.brito.top/#website" },
      primaryImageOfPage: {
        "@id": "https://www.brito.top/#primaryimage",
      },
      image: { "@id": "https://www.brito.top/#primaryimage" },
      thumbnailUrl: "https://www.brito.top/images/meta-image.webp",
      description:
        "We build creative, scalable, and performant projects. We're experts in web development, mobile apps, UI and UX design. Find out more.",
      breadcrumb: { "@id": "https://www.brito.top/#breadcrumb" },
      inLanguage: "en",
      potentialAction: [
        {
          "@type": "ReadAction",
          target: ["https://www.brito.top/"],
        },
      ],
    },
    {
      "@type": "ImageObject",
      inLanguage: "en",
      "@id": "https://www.brito.top/#primaryimage",
      url: "https://www.brito.top/images/meta-image.webp",
      contentUrl: "https://www.brito.top/images/meta-image.webp",
      width: 1200,
      height: 628,
    },
    {
      "@type": "BreadcrumbList",
      "@id": "https://www.brito.top/#breadcrumb",
      itemListElement: [{ "@type": "ListItem", position: 1, name: "Home" }],
    },
    {
      "@type": "WebSite",
      "@id": "https://www.brito.top/#website",
      url: "https://www.brito.top/",
      name: "Brito.top | UI, UX and Web projects development",
      description: "",
      potentialAction: [
        {
          "@type": "SearchAction",
          target: {
            "@type": "EntryPoint",
            urlTemplate: "https://www.brito.top/?s={search_term_string}",
          },
          "query-input": "required name=search_term_string",
        },
      ],
      inLanguage: "en",
    },
  ],
};
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/ico" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <link
      rel="preload"
      as="font"
      href="/fonts/Mont/Mont-HeavyDEMO.otf"
      type="font/otf"
      crossorigin
    />
    <link
      rel="preload"
      as="font"
      href="/fonts/Sarabun/Sarabun-Regular.ttf"
      type="font/ttf"
      crossorigin
    />
    <link rel="canonical" href="https://www.brito.top" />
    <title>{title}</title>
    <!-- Primary Meta Tags -->
    <meta name="title" content={title} />
    <meta
      name="description"
      content="We build creative, scalable, and performant projects. We're experts in web development, mobile apps, UI, and UX design. Find out more."
    />
    <meta
      name="keywords"
      content="web development, ui ux design, ui ux, ui development, ui and ux, ux development, web development projects, app ux, ui apps, ui designer app, web development mobile, ux web design, ui design web, ui ux developer, mobile ui designer, projects for the web, web projects"
    />

    <script type="application/ld+json" set:html={JSON.stringify(webpage)}
    ></script>

    <!-- Open Graph / Facebook -->
    <meta property="og:locale" content="en" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Brito.top" />
    <meta property="og:url" content="https://www.brito.top/" />
    <meta
      property="og:title"
      content="Brito.top | UI, UX and Web projects development"
    />
    <meta
      property="og:description"
      content="We build creative, scalable, and performant projects. We're experts in web development, mobile apps, UI and UX design. Find out more."
    />
    <meta property="og:image" content="/images/meta-image.webp" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="628" />
    <meta property="og:image:type" content="image/webp" />
    <meta
      name="robots"
      content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"
    />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://www.brito.top/" />
    <meta
      property="twitter:title"
      content="Brito.top | UI, UX and Web projects development"
    />
    <meta
      property="twitter:description"
      content="We build creative, scalable, and performant projects. We're experts in web development, mobile apps, UI and UX design. Find out more."
    />
    <meta property="twitter:image" content="/images/meta-image.webp" />
    <script
      type="text/partytown"
      src="https://www.googletagmanager.com/gtag/js?id=G-5JCN57K96T"
    ></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-5JCN57K96T");
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global lang="scss">
  @import "../variables";

  @font-face {
    font-family: "Mont";
    src: url("/fonts/Mont/Mont-HeavyDEMO.otf") format("opentype");
    font-style: bold;
    font-weight: bold;
    font-display: swap;
  }

  @font-face {
    font-family: "Sarabun";
    src: url("/fonts/Sarabun/Sarabun-Regular.ttf") format("truetype");
    font-style: normal;
    font-weight: 400;
    font-display: swap;
  }
  @font-face {
    font-family: "Sarabun";
    src: url("/fonts/Sarabun/Sarabun-SemiBold.ttf") format("truetype");
    font-style: normal;
    font-weight: 600;
    font-display: swap;
  }
  @font-face {
    font-family: "Sarabun";
    src: url("/fonts/Sarabun/Sarabun-Bold.ttf") format("truetype");
    font-style: normal;
    font-weight: 700;
    font-display: swap;
  }

  * {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
    &:focus-visible {
      outline: 0.1rem solid $purple-1;
      outline-offset: 0.4rem;
    }
  }

  html {
    background-color: $black-1;
    font-size: 62.5%;
    scroll-behavior: smooth;

    @media screen and (min-width: $breakpoint-large-desktop) {
      font-size: 100%;
    }
    @media screen and (min-width: $breakpoint-extra-large-desktop) {
      font-size: 180%;
    }
  }

  body {
    font-size: 1.6rem;
  }
  html,
  body {
    width: 100%;
    height: 100%;
  }

  .visually-hidden {
    clip: rect(0 0 0 0);
    clip-path: inset(50%);
    height: 1px;
    overflow: hidden;
    position: absolute;
    white-space: nowrap;
    width: 1px;
  }
</style>
<script>
  import viewportObserver from "../utils/viewportObserver";

  const elementsToObserve = document.querySelectorAll("[data-to-observe]");
  if (elementsToObserve.length) {
    elementsToObserve.forEach((element) => {
      viewportObserver.observe(element);
    });
  }
</script>
